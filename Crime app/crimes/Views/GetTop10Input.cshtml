@page
@model GetTop10InputModel
@{
  ViewData["Title"] = "Top-10 Crimes By Area";
}

<div class="container">  
    <h2>TOP 10 CRIMES BY AREA</h2>  
    <hr />  
    <br />  
		<form action="Top10ByArea" method="get">
				
        <div class="row">  
            <div class="col-md-4">  
                <label asp-for="Input">Enter the area number or its name:</label>  
                <input asp-for="Input" class="form-control" />  
            </div>  
        </div>   
				
        <br />  
        <input type="submit" value="Lookup" class="btn btn-primary" />  
        <a class="btn btn-default" href="/">Cancel</a>  
				
    </form>
</div>

