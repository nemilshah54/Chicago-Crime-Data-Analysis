@page
@model CrimeCodesModel
@{
  ViewData["Title"] = "All Crime Codes Information";
}

<h2>All Crime Codes Information</h2>  

@{
   if (@Model.EX != null)
	 {
	   <br />
		 <br />
		 <h3>**ERROR: @Model.EX.Message</h3>
		 <br />
		 <hr />
		 <br />
		 <br />
	 }
}

<table class="table">  
    <thead>  
        <tr>  
            <th>  
                Rank
            </th>  
            <th>  
                IUCR
            </th>  
            <th>  
                TotalCrimes 
            </th>  
            <th>  
                PrimaryDesc
            </th>  
            <th>  
                SecondaryDesc
            </th>          
        </tr>  
    </thead>  
    <tbody>  
				@{
				   int rank = 1;
				 }
				
        @foreach (var item in Model.CrimeList)  
        {  
            <tr>  
                <td>  
										@rank
                </td>  
                <td>  
                    @item.IUCR
                </td>  
                <td>  
                    @item.TotalCrimes
                </td>  
                <td>  
                    @item.PrimaryDesc
                </td>  
                <td>  
                    @item.SecondaryDesc
                </td>    
            </tr>  
						
						rank++;
        }  
    </tbody>  
</table> 